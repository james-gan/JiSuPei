<resources>

    <!--配置基础style-->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">

    </style>

    <style name="AppTheme" parent="AppBaseTheme">

        <item name="colorPrimary">@color/yellow</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">@color/yellow</item>
        <item name="colorControlActivated">@color/yellow</item>
        <!-- 沉浸式状态栏 -->
        <!--<item name="android:fitsSystemWindows">true</item>-->
        <!--<item name="android:clipToPadding">false</item>-->

    </style>

    <style name="horizontal_gray_divider">
        <item name="android:layout_height">@dimen/split_one_pixels</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:background">@color/color_black_d9d9d9</item>
    </style>


    <style name="take_photo_anim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/pop_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/pop_exit_anim</item>
    </style>

    <!--全局loading对话框风格 parent="@android:style/Theme.Holo.Light.Dialog"-->

    <style name="app_dialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:indeterminateTint">@color/blue_head</item>
        <item name="android:indeterminateTintMode">src_atop</item>
    </style>

    <!--升级对话框-->
    <style name="update_dialog" parent="Theme.AppCompat.Light.Dialog.Alert"/>

    <style name="progress_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsFloating">true</item>
        <!-- 设置未浮动窗口 -->
        <item name="android:windowFrame">@null</item>
        <!-- 设置无边框 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 设置无标题 -->
        <item name="android:windowBackground">@color/transparent</item>
        <!-- 设置完全透明 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 设置屏幕变暗 -->

        <item name="android:windowIsTranslucent">false</item>
        <item name="android:background">@null</item>

    </style>

    <style name="Transparent"  parent="AppTheme">
        <item name="android:windowBackground">@color/transparent1</item>
        <item name="android:windowIsTranslucent">true</item>
