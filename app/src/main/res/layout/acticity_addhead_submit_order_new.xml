<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">


    <LinearLayout
        android:id="@+id/wuliu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="20px"
        android:paddingBottom="20px"
        >
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="物流方式"
              android:layout_marginLeft="23px"
              android:textSize="28px"
              />
        <RadioGroup
            android:id="@+id/mRadioGroup"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <RadioButton
                android:id="@+id/jphwl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:layout_marginLeft="46px"
                android:textSize="28px"
                android:text="集配号物流"/>
            <RadioButton
                android:id="@+id/zt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="28px"
                android:layout_marginLeft="46px"
                android:text="自提"/>

        </RadioGroup>

    </LinearLayout>
<View
    android:layout_below="@+id/wuliu"
    android:id="@+id/view"
    android:layout_width="match_parent"
    android:layout_height="2px"
    android:background="#f1f1f1"
    ></View>
    <RelativeLayout
        android:id="@+id/ll"
        android:layout_below="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
       >

        <RelativeLayout
            android:id="@+id/rl"
            android:layout_marginTop="20px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/yige_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/yige_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40px"
                    android:layout_weight="1"
                    android:text="dsadas"
                    android:textSize="30px" />

                <TextView
                    android:id="@+id/yige_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="65px"
                    android:text="213123123"
                    android:textSize="30px" />
            </LinearLayout>

            <LinearLayout

                android:id="@+id/sange_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                >
                <RelativeLayout
                    android:layout_width="185px"
                    android:layout_height="120px"
                    android:layout_marginLeft="40px"
                    android:background="@drawable/shape_address"
                    android:gravity="center_vertical">
                    <ImageView
                      android:id="@+id/iv_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10px"
                        android:src="@mipmap/shr"
                       />
                    <TextView
                        android:id="@+id/name1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#333333"
                        android:layout_weight="1"

                        android:text="---"
                        android:textSize="26px"
                        android:layout_toRightOf="@+id/iv_1"
                        android:layout_alignBottom="@+id/iv_1"
                        android:layout_marginLeft="5px"
                        android:layout_marginBottom="-4px"
                        android:ellipsize="end"
                        android:singleLine="true"
                     />

                    <TextView
                        android:id="@+id/phone_et1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/name1"
                        android:textColor="#333333"
                        android:layout_marginLeft="10px"
                        android:layout_weight="1"
                        android:text="---"
                        android:textSize="26px"

                        android:layout_marginTop="20px"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl2"
                    android:layout_width="185px"
                    android:layout_height="120px"
                    android:layout_marginLeft="26px"
                    android:background="@drawable/shape_address"
                    android:gravity="center_vertical">
                    <ImageView
                        android:id="@+id/iv_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10px"
                        android:src="@mipmap/shr"
                        />
                    <TextView
                        android:id="@+id/name2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:textColor="#333333"
                        android:layout_weight="1"

                        android:text="---"
                        android:textSize="26px"

                        android:layout_toRightOf="@+id/iv_2"
                        android:layout_alignBottom="@+id/iv_2"
                        android:layout_marginLeft="5px"
                        android:layout_marginBottom="-4px"
                        android:ellipsize="end"
                        android:singleLine="true"
                        />

                    <TextView
                        android:id="@+id/phone_et2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/name2"
                        android:textColor="#333333"
                        android:layout_marginLeft="10px"
                        android:layout_weight="1"
                        android:text="---"
                        android:textSize="26px"

                        android:layout_marginTop="20px"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl3"
                    android:layout_width="185px"
                    android:layout_height="120px"
                    android:layout_marginLeft="26px"
                    android:background="@drawable/shape_address"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/iv_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10px"
                        android:src="@mipmap/shr"
                        />
                    <TextView
                        android:id="@+id/name3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_weight="1"

                        android:text="---"
                        android:textColor="#333333"
                        android:textSize="26px"

                        android:layout_toRightOf="@+id/iv_3"
                        android:layout_alignBottom="@+id/iv_3"
                        android:layout_marginLeft="5px"
                        android:layout_marginBottom="-4px"
                        android:ellipsize="end"
                        android:singleLine="true"
                        />

                    <TextView
                        android:id="@+id/phone_et3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/name3"
                        android:textColor="#333333"
                        android:layout_marginLeft="10px"
                        android:layout_weight="1"
                        android:text="---"
                        android:textSize="26px"
                        android:layout_marginTop="20px"
                        />
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl"
            android:layout_marginLeft="30px"
            android:layout_marginTop="25px"


            android:orientation="horizontal">
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/address"
               />
            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="---"
                android:layout_marginLeft="10px"
                android:layout_marginRight="50px"
                android:textColor="#666666"
                android:layout_marginTop="6px"
                android:textSize="30px" />

        </LinearLayout>

        <ImageView
            android:id="@+id/goto_address"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
           android:src="@mipmap/sub_select"
            android:layout_marginRight="25px"

            android:textSize="30px" />
    </RelativeLayout>

    <View
        android:id="@+id/view_0"
        android:layout_width="match_parent"
        android:layout_height="6px"
        android:layout_below="@+id/ll"
        android:layout_marginTop="25px"
        android:background="@mipmap/hx" />
    <View
        android:layout_below="@+id/view_0"
        android:layout_width="match_parent"
        android:layout_height="20px"
        android:background="#F2F2F2"
        ></View>
</RelativeLayout>