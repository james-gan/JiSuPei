<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/right_dish_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="100dp"

        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/img_rl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp">

            <ImageView
                android:id="@+id/img"
                android:layout_width="50dp"
                android:layout_height="50dp"

                android:src="@mipmap/add_img" />
        </RelativeLayout>

        <TextView
            android:id="@+id/product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/img_rl"
            android:layout_marginLeft="5dp"
            android:layout_toLeftOf="@+id/sp_jiage"
            android:layout_toRightOf="@+id/img_rl"
            android:text="撒啊s撒sdsadsa撒啊s撒sd撒啊s撒sd撒啊s撒sd撒啊s撒sddsds"
            android:textColor="#333333"
            android:maxLines="2"
            android:ellipsize="end"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/sp_jiage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/product_name"
            android:layout_marginRight="5dp"

            android:text="12.00"
            android:textColor="@color/orange_head"
            android:textSize="14sp"

            />

        <TextView
            android:id="@+id/sp_guig_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/product_name"
            android:layout_below="@+id/product_name"

            android:layout_marginTop="2dp"
            android:text="规格：100*10g(1件=20袋)"
            android:textColor="#A6A6A6"
            android:textSize="14sp"

            />
        <TextView
            android:id="@+id/get_qty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/product_name"
            android:layout_marginTop="1dp"
            android:text="请货量"
            android:textColor="@color/blue_head"
            android:textSize="14sp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            />


        <LinearLayout
            android:id="@+id/num_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="7dp"
            android:layout_marginRight="4dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/jian"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginRight="2dp"
                android:background="@drawable/shape_order_grey_width"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="5"
                android:minWidth="40dp"
                android:textColor="#666666"
                android:textSize="13sp"

                />

            <TextView
                android:id="@+id/jian_danwei"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginRight="1dp"

                android:layout_toLeftOf="@+id/dai"
                android:gravity="center"
                android:text="件"

                android:textColor="#666666"
                android:textSize="14sp" />
        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dddddd"

        ></View>
</LinearLayout>