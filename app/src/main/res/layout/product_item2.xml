<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingLeft="15dp"
    android:paddingTop="10dp"
    android:paddingRight="15dp"
    android:background="?android:attr/selectableItemBackground"
    android:layout_height="wrap_content">


    <ImageView
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_centerVertical="true"
        android:src="@mipmap/goods_item"
        android:id="@+id/product_img"/>

    <TextView
        android:id="@+id/name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/light_black"
        android:layout_toRightOf="@+id/product_img"
        android:singleLine="true"
        android:layout_marginLeft="10dp"
        android:textSize="15dp"
        android:text="越南巴沙鱼片"/>



    <TextView
        android:id="@+id/rank_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_alignLeft="@+id/name_text"
        android:layout_below="@+id/name_text"
        android:textSize="13dp"
        android:text="数量:10件"/>

    <TextView
        android:id="@+id/equation_factor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13dp"
        android:layout_below="@+id/rank_text"
        android:layout_marginTop="5dp"
        android:layout_alignLeft="@+id/name_text"
      
        android:text="1件=10袋"
        />


    <TextView
        android:id="@+id/price_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:layout_below="@+id/rank_text"
        android:layout_marginTop="20dp"
        android:layout_alignLeft="@+id/name_text"
        android:textColor="@color/yellow111"
        android:text="10"
        />

    <TextView
        android:id="@+id/num_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/light_black"
        android:layout_marginLeft="10dp"
        android:textSize="16dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/price_text"
        android:text="x10"/>



    <ImageView
        android:id="@+id/add"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_alignTop="@+id/price_text"
        android:visibility="invisible"
        android:layout_height="wrap_content"
        android:src="@mipmap/favor"/>

    <View android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_grey1"
        android:layout_below="@+id/product_img"
        android:layout_marginTop="10dp"
        />

</RelativeLayout>