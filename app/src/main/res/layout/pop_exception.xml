<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <RelativeLayout
            android:id="@+id/pop"
            android:layout_width="match_parent"
            android:background="@color/light_grey"
            android:layout_height="90px">

        <View android:id="@+id/line"
            android:layout_width="4px"
            android:layout_centerVertical="true"
            android:background="@color/yellow"
            android:layout_marginLeft="30px"
            android:layout_height="50px"
            />
            <TextView
                android:id="@+id/good_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_centerVertical="true"
                android:textColor="@android:color/black"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/line"
                android:text="货品:越南巴沙鱼片1*200g"
                android:textSize="35px"
                />

            <TextView
                android:id="@+id/delete"
                android:layout_width="35px"
                android:layout_height="34px"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30px"
                android:background="@mipmap/bottom_close"
            />

    </RelativeLayout>

    <RelativeLayout
        android:background="@color/white"
        android:paddingBottom="30px"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:paddingLeft="20px"
        android:paddingRight="20px"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/hpjd"
            android:layout_marginTop="30px"
            android:layout_height="60px"
            android:text="货品解冻"
            android:background="@drawable/select_pop_yy"
            android:layout_width="160px"
            android:height="40px"
            android:gravity="center"
            android:textSize="30px"
            />
        <TextView
            android:id="@+id/hpcf"
            android:layout_marginLeft="20px"
            android:layout_alignTop="@+id/hpjd"
            android:layout_toRightOf="@+id/hpjd"
            android:layout_width="160px"
            android:layout_height="60px"
            android:text="货品错发"
            android:height="40px"

            android:gravity="center"
            android:background="@drawable/select_pop_yy"
            android:textSize="30px"
            />
        <TextView
            android:id="@+id/hpsh"
            android:layout_marginLeft="20px"
            android:layout_alignTop="@+id/hpcf"
            android:layout_toRightOf="@+id/hpcf"

            android:layout_height="60px"
            android:text="货品损坏"
            android:background="@drawable/select_pop_yy"
            android:layout_width="160px"
            android:height="40px"
            android:gravity="center"
            android:textSize="30px"
            />
        <TextView
            android:id="@+id/hpqs"
            android:layout_below="@+id/hpjd"
            android:layout_alignLeft="@+id/hpjd"
            android:layout_marginTop="30px"
            android:layout_height="60px"
            android:text="货品缺失"
            android:background="@drawable/select_pop_yy"
            android:layout_width="160px"
            android:height="40px"
            android:gravity="center"
            android:textSize="30px"
            />
        <TextView
            android:id="@+id/qt"
            android:layout_toRightOf="@+id/hpqs"
            android:layout_alignTop="@+id/hpqs"

            android:layout_height="60px"
            android:text="其他"
            android:layout_marginLeft="20px"
            android:background="@drawable/select_pop_yy"
            android:layout_width="160px"
            android:height="40px"
            android:gravity="center"
            android:textSize="30px"
            />

        <EditText
            android:id="@+id/edit_pop"
            android:layout_marginTop="20px"
            android:layout_below="@+id/hpqs"
            android:layout_width="500px"
            android:layout_height="200px"
            android:padding="6px"
            android:background="@drawable/shape_pop_gray"
            android:hint="详细描述"
            android:gravity="top"
            android:textSize="30px"
            />
        <com.jingchen.pulltorefresh.PullableRecyclerView
            android:background="@color/white"
            android:id="@+id/lin"
            android:layout_marginTop="10px"
            android:layout_width="580px"
            android:layout_below="@+id/edit_pop"
            android:layout_height="155px"

            >
        </com.jingchen.pulltorefresh.PullableRecyclerView>
          <!--<LinearLayout-->
              <!--android:id="@+id/lin"-->
