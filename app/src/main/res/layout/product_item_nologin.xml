<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/right_dish_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:layout_margin="7dp"
        android:background="#ffffffff">

        <RelativeLayout
            android:id="@+id/img_rl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp">

            <ImageView
                android:id="@+id/product_img"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_centerVertical="true"

                android:src="@mipmap/error" />
        </RelativeLayout>


        <TextView
            android:layout_below="@+id/img_rl"
            android:id="@+id/name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="15dp"


            android:text="酱油酱油酱油酱油酱dsad"
            android:textColor="#333333"
            android:textSize="15sp" />




        <TextView
            android:id="@+id/rank_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/name_text"
            android:layout_below="@+id/name_text"
            android:layout_marginTop="2dp"
            android:text="规格：100*10g(1件=20袋)"
            android:textColor="#A6A6A6"
            android:textSize="12sp"

            />

        <TextView
            android:id="@+id/ck_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/name_text"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="1dp"
            android:text="规格：100*10g(1件=20袋)"
            android:textColor="@color/blue_head"
            android:textSize="12sp"
android:visibility="gone"

            />
        <TextView

            android:id="@+id/price_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="8dp"
            android:layout_alignLeft="@+id/name_text"
            android:text="12.00"
            android:textColor="@color/orange_head"
            android:textSize="14sp"

            />

        <!--库存提示-->
        <TextView
            android:id="@+id/num_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/name_text"
            android:layout_alignTop="@+id/ll"
            android:layout_below="@+id/rank_text"
            android:text="10件"
            android:textColor="#666666"
            android:textSize="14sp"

android:visibility="gone"
            />



        <LinearLayout
            android:id="@+id/xuangou_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"

            android:layout_marginRight="4dp"
            android:gravity="center_vertical"
            android:padding="7dp"
            android:orientation="horizontal">

            <!--<TextView-->
                <!--android:id="@+id/xuangou"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginRight="2dp"-->
                <!--android:background="@color/blue_head"-->
                <!--android:paddingBottom="5dp"-->
                <!--android:paddingLeft="10dp"-->
                <!--android:paddingRight="10dp"-->
                <!--android:paddingTop="5dp"-->
                <!--android:text="选购"-->
                <!--android:textColor="#ffffffff"-->
                <!--android:textSize="14sp" />-->

               <ImageView
                   android:id="@+id/xuangou"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@mipmap/gw"
                   />
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>