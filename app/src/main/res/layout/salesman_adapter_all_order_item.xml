<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"

        >

        <TextView
            android:id="@+id/shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_marginTop="25px"
            android:drawableLeft="@mipmap/dp"
            android:drawablePadding="10px"
            android:text="门店名称"
            android:textColor="#333333"
            android:textSize="31px" />

        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20px"
            android:layout_marginTop="25px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/status_image1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5px"
                android:src="@mipmap/errorhas" />

            <ImageView

                android:id="@+id/status_image2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5px"
                android:src="@mipmap/order_right_status" />

            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:drawablePadding="10px"
                android:text="待发货"
                android:textColor="@color/yellow1"
                android:textSize="31px" />
        </LinearLayout>

        <View
            android:id="@+id/henxian_flag"
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_below="@+id/shop_name"
            android:layout_marginTop="25px"
            android:background="@color/blue_head" />

        <RelativeLayout
            android:id="@+id/rl1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/henxian_flag"
            android:background="#FCFCFC"
            android:paddingBottom="20px">

            <TextView
                android:id="@+id/order_code_tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:layout_marginTop="20px"

                android:text="订单编号：5456465465"
                android:textSize="31px" />

            <TextView
                android:id="@+id/category_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/order_code_tv1"
                android:layout_marginLeft="25px"
                android:layout_marginRight="10px"
                android:layout_marginTop="10px"
                android:text="采购总类:4"
                android:textColor="#666666"
                android:textSize="31px" />

            <TextView
                android:id="@+id/order_price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/category_count"
                android:layout_marginLeft="25px"

                android:layout_marginRight="20px"

                android:text="订单价格：45000.00"
                android:textColor="@color/orange_head"
                android:textSize="31px" />

            <TextView
                android:id="@+id/order_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/category_count"
                android:layout_below="@+id/category_count"

                android:layout_marginRight="20px"
                android:layout_marginTop="10px"
                android:text="2016-09-09 11：23：22"
                android:textColor="#9A9A9A"
                android:textSize="30px"></TextView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/order_time"

                android:layout_marginRight="20px"
                >
                <TextView
                    android:id="@+id/ck_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_toLeftOf="@+id/freight_price"
                    android:text="仓库"
                    android:textColor="@color/blue_head"
                    android:textSize="25px" />
            <TextView
                android:id="@+id/freight_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="运费"
                android:textColor="@color/orange_head"
                android:textSize="25px"
                android:layout_marginLeft="10px"

                />


            </LinearLayout>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/category_count"
                android:layout_marginRight="40px"
                android:src="@mipmap/order_right"
                android:visibility="gone" />


        </RelativeLayout>
        <ImageView
            android:id="@+id/wzf_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/wzf"
            android:layout_toLeftOf="@+id/ll"
            android:layout_marginTop="-20px"
            />
        <ImageView
