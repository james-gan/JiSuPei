<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F1F1"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/head_include"
        android:background="@mipmap/homepagebg">
        <TextView
            android:id="@+id/shop_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:layout_marginTop="80px"
            android:layout_toRightOf="@+id/imgr"
            android:text="李小名"
            android:textColor="@color/white"
            android:textSize="15sp"
            />
        <ImageView
            android:id="@+id/exit_app"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="30px"
            android:layout_marginRight="35px"
            android:layout_marginTop="80px"
            android:layout_toRightOf="@+id/imgr"
            android:src="@mipmap/exit" />

        <TextView
            android:id="@+id/shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/shop_user_name"
            android:layout_marginLeft="30px"
            android:layout_marginTop="10px"
            android:layout_toRightOf="@+id/imgr"
            android:text="武汉良中行"
            android:textColor="#ddffffff"
            android:textSize="15sp" />
    </RelativeLayout>
    <!--我的客户-->
    <LinearLayout
        android:id="@+id/ll111"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl"
        android:paddingBottom="5dp"
        android:paddingTop="5dp">

        <RelativeLayout
            android:id="@+id/daishenhe1"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/icondaishenhe1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/daifuk" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/icondaishenhe1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10px"
                android:paddingLeft="20px"
                android:paddingRight="20px"
                android:text="待审核"
                android:textSize="15sp"

                />

            <TextView
                android:id="@+id/icondaishenhe1_num11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-30px"
                android:layout_toRightOf="@+id/icondaishenhe1"
                android:background="@drawable/shape_homepage_newvp"
                android:gravity="center"
                android:minWidth="10dp"
                android:paddingBottom="1dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:paddingTop="1dp"
                android:text="0"
                android:textColor="@android:color/white"
                android:textSize="8sp"

                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/daipeisong1"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/icondaipeisong1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/daifuk"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/icondaipeisong1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10px"
                android:paddingLeft="20px"
                android:paddingRight="20px"
                android:text="待配送"
                android:textSize="15sp"

                />

            <TextView
                android:id="@+id/icondaipeisong1_num11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-30px"
                android:layout_toRightOf="@+id/icondaipeisong1"
                android:background="@drawable/shape_homepage_newvp"
                android:gravity="center"
                android:minWidth="10dp"
                android:paddingBottom="1dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:paddingTop="1dp"
                android:text="0"
                android:textColor="@android:color/white"
                android:textSize="8sp"

                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/wzf_s1"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iconwzf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/daifuk"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iconwzf"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10px"
                android:paddingLeft="20px"
                android:paddingRight="20px"
                android:text="未支付"
                android:textSize="15sp"
                />
            <TextView
                android:id="@+id/weizfu_num11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-30px"
                android:layout_toRightOf="@+id/iconwzf"
                android:background="@drawable/shape_homepage_newvp"
                android:gravity="center"
                android:minWidth="10dp"
                android:paddingBottom="1dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:paddingTop="1dp"
                android:text="0"
                android:textColor="@android:color/white"
                android:textSize="8sp"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/daiyichang"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iconsh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/daifuk"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iconsh"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10px"
                android:paddingLeft="20px"

                android:text="待处理异常"
                android:textSize="15sp"

                />

            <TextView
                android:id="@+id/daiyic_num1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-30px"
                android:layout_toRightOf="@+id/iconsh"
                android:background="@drawable/shape_homepage_newvp"
                android:gravity="center"
                android:minWidth="10dp"
                android:paddingBottom="1dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:paddingTop="1dp"
                android:text="0"
                android:textColor="@android:color/white"
                android:textSize="8sp"

                />

        </RelativeLayout>
    </LinearLayout>

    <View
        android:id="@+id/view11"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/ll111"
        android:background="#B3B3B3" />

    <RelativeLayout
        android:id="@+id/diaobo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view11"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="调拨订单管理" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"

            android:layout_marginRight="10dp"
            android:src="@mipmap/back_button1" />

    </RelativeLayout>


    <View
        android:id="@+id/view111"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/diaobo"
        android:background="#B3B3B3" />


    <RelativeLayout
        android:id="@+id/dyj"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view111"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="抵用券" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"

            android:layout_marginRight="10dp"
            android:src="@mipmap/back_button1" />

    </RelativeLayout>


    <View
        android:id="@+id/view1111"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/dyj"
        android:background="#B3B3B3" />


    <TextView
        android:id="@+id/aaa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view1111"
        android:layout_marginLeft="20dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="调拨订单管理" />


    <RelativeLayout
        android:id="@+id/trl"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/aaa"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="今日总销量" />

        <TextView
            android:id="@+id/jingriprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="13.33"
            android:textColor="@color/orange_head"
            android:src="@mipmap/back_button1" />

        <View

            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#B3B3B3" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/trl1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/trl"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="本周总销量" />

        <TextView
            android:id="@+id/benzhouprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="13.33"
            android:textColor="@color/orange_head"
            android:src="@mipmap/back_button1" />

        <View

            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#B3B3B3" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/trl2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/trl1"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="本月总销量" />

        <TextView
            android:id="@+id/benyueprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="13.33"
            android:textColor="@color/orange_head"
            android:src="@mipmap/back_button1" />

        <View

            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#B3B3B3" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/trl3"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/trl2"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="总销量" />

        <TextView
            android:id="@+id/zongprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="13.33"
            android:textColor="@color/orange_head"
            android:src="@mipmap/back_button1" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#B3B3B3" />
    </RelativeLayout>
</RelativeLayout>