<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_marginBottom="20px"
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="20px">

        <TextView
            android:id="@+id/product_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_marginTop="30px"
            android:text="酱油"
            android:textSize="30px" />

        <TextView
            android:id="@+id/product_guige"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_tv"
            android:layout_marginLeft="20px"
            android:text="规格：100 (1件13)"
            android:textSize="30px" />

        <TextView
            android:id="@+id/daifa_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_guige"
            android:layout_marginLeft="20px"
            android:layout_marginTop="20px"
            android:text="待发：50件13袋"
            android:textSize="30px" />


        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/daifa_num"
            android:layout_marginLeft="20px"
            android:layout_toRightOf="@+id/daifa_num"
            android:text="实发：50件13袋"
            android:textColor="@color/blue_head"
            android:textSize="30px" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/daifa_num"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50px"
                android:layout_below="@+id/daifa_num"
                android:gravity="center_vertical"
                android:orientation="horizontal"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:background="@drawable/shape_order_blue"
                    android:padding="5px"
                    android:text="货品解冻"
                    android:textColor="@color/white"
                    android:textSize="28px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:background="@drawable/shape_order_blue"
                    android:padding="5px"
                    android:text="货品解冻"
                    android:textColor="@color/white"
                    android:textSize="28px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:background="@drawable/shape_order_blue"
                    android:padding="5px"
                    android:text="货品解冻"
                    android:textColor="@color/white"
                    android:textSize="28px" />
            </LinearLayout>
            <!--图片-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50px"
                android:layout_below="@+id/daifa_num"
                android:gravity="center_vertical"
                android:orientation="horizontal"

                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30px"

                    android:src="@mipmap/shr" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"

                    android:src="@mipmap/shr" />


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"

                    android:src="@mipmap/shr" />

            </LinearLayout>

            <!--异常说名-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:text="异常说明：123213213123"
                android:textColor="@color/orange_head"
                android:textSize="30px" />

        </LinearLayout>

    </RelativeLayout>


</LinearLayout>