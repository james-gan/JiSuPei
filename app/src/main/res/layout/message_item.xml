<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:background="?android:attr/selectableItemBackground"
        android:paddingRight="22dp"
        >

        <ImageView
            android:id="@+id/circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:visibility="invisible"
            android:src="@mipmap/list_icon_default" />


        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/circle"
            android:layout_toLeftOf="@+id/arrow"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:text="您有一笔订单发货了"
            android:singleLine="true"
            android:layout_centerVertical="true"
            android:textSize="15dp" />

        <!--<TextView-->
            <!--android:id="@+id/time"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_toRightOf="@+id/title"-->
            <!--android:layout_marginRight="15dp"-->
            <!--android:layout_weight="1"-->
            <!--android:text="2016.04.27"-->
            <!--android:textSize="12dp" />-->


        <ImageView
            android:id="@+id/arrow"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="?android:attr/selectableItemBackground"
            android:layout_height="wrap_content"
            android:src="@mipmap/under_icon" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/drop_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_item_height"
        android:layout_marginBottom="@dimen/_bottom_item_height"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp"
        android:orientation="horizontal" >

        <TextView android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="您的订单721356536231已经发货!"
            />
    </LinearLayout>
</LinearLayout>