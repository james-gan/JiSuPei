<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F1F1"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="300px"
        android:layout_below="@+id/head_include"
        android:background="@mipmap/homepagebg">
        <!--<com.facebook.drawee.view.SimpleDraweeView-->
            <!--android:id="@+id/imgr"-->
            <!--android:layout_width="110px"-->
            <!--android:layout_height="110px"-->
            <!--android:layout_marginLeft="20px"-->
            <!--android:layout_marginTop="70px"-->
            <!--fresco:actualImageScaleType="centerCrop"-->
            <!--fresco:placeholderImage="@mipmap/arrow_right"-->
            <!--fresco:placeholderImageScaleType="centerInside"-->

            <!--/>-->

        <TextView
            android:id="@+id/shop_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80px"
            android:layout_toRightOf="@+id/imgr"
            android:text="李小名"
            android:textColor="@color/white"
            android:textSize="32px"
            android:layout_marginLeft="30px"

            />
        <ImageView
            android:id="@+id/exit_app"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80px"
            android:layout_toRightOf="@+id/imgr"


            android:layout_marginLeft="30px"
            android:layout_alignParentRight="true"
            android:layout_marginRight="35px"
            android:src="@mipmap/exit"

            />
        <TextView
            android:id="@+id/shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/shop_user_name"
android:layout_marginTop="10px"
            android:layout_toRightOf="@+id/imgr"
            android:text="武汉良中行"
            android:textColor="#ddffffff"
            android:layout_marginLeft="30px"
            android:textSize="30px" />
        <!--邀请码-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="94px"
            android:layout_alignParentBottom="true"
            android:background="#bb396196"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/yqm_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:gravity="center"
                    android:text="123"
                    android:textColor="@color/orange_head"
                    android:textSize="28px"

                    />

                <TextView
                    android:id="@+id/yqm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="我的邀请码"
                    android:textColor="#ddffffff"
                    android:layout_marginTop="5px"
                    android:textSize="26px" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/alert_yqm"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/history_order_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                     android:src="@mipmap/yqm"

                    />

                <TextView
                    android:id="@+id/yqm_ewm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="集速配二维码"
                    android:textColor="#ddffffff"
                    android:layout_marginTop="5px"
                    android:textSize="26px" />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>
    <!--我的客户-->
    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="350px"
        android:layout_below="@+id/rl"
        android:background="@color/white"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/my_daishenghe"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_below="@+id/rl"
            android:layout_weight="1"
            android:gravity="center">

            <!--<ImageView-->
                <!--android:id="@+id/iv"-->
                <!--android:layout_width="102px"-->
                <!--android:layout_height="83px"-->
                <!--android:layout_centerInParent="true"-->
                <!--android:src="@mipmap/cus" />-->

            <ImageView
                android:id="@+id/iv1"
                android:layout_width="175px"
                android:layout_height="195px"
                android:layout_centerInParent="true"
                android:src="@drawable/select_daishenhe" />

            <TextView
                android:id="@+id/daishenghe_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv1"
                android:layout_centerInParent="true"
                android:layout_marginTop="30px"
                android:text="待审核订单---"
                android:textColor="#333333"
                android:singleLine="true"
                android:ellipsize="end"
                android:gravity="center"
                android:textSize="30px" />


        </RelativeLayout>

        <View
            android:layout_width="2px"
            android:layout_height="match_parent"

            android:background="#B3B3B3" />

        <RelativeLayout
            android:id="@+id/daifahuo_rl"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_below="@+id/rl"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/iv1yqm_6"
                android:layout_width="175px"
                android:layout_height="195px"
                android:layout_centerInParent="true"
                android:src="@drawable/select_daifahuo" />

            <TextView
                android:id="@+id/daifahuo_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv1yqm_6"
                android:layout_centerInParent="true"
                android:layout_marginTop="30px"
                android:text="待发货订单---"
                android:gravity="center"
                android:textColor="#333333"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="30px" />

        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_below="@+id/ll"
        android:background="#B3B3B3" />
    <!--第二排-->
    <LinearLayout
        android:id="@+id/er"
        android:layout_width="match_parent"
        android:layout_height="350px"
        android:layout_below="@+id/ll"
        android:layout_marginTop="2px"
        android:background="@color/white"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/daichuli_products"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_below="@+id/rl"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/qycp_iv1"
                android:layout_width="175px"
                android:layout_height="195px"
                android:layout_centerInParent="true"
                android:src="@drawable/select_daicli" />

            <TextView
                android:id="@+id/daicli_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/qycp_iv1"
                android:layout_centerInParent="true"
                android:layout_marginTop="30px"
                android:text="待处理异常---"
                android:textColor="#333333"
                android:gravity="center"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="30px" />
        </RelativeLayout>

        <View
            android:layout_width="2px"
            android:layout_height="match_parent"

            android:background="#B3B3B3" />

        <RelativeLayout
            android:id="@+id/yicli"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_below="@+id/rl"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/ewm_iv1"
                android:layout_width="175px"
                android:layout_height="195px"
                android:layout_centerInParent="true"
                android:src="@drawable/select_ycli" />

            <TextView
                android:id="@+id/yicli_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ewm_iv1"
                android:layout_centerInParent="true"
                android:layout_marginTop="30px"
                android:text="已处异常---"
                android:gravity="center"
                android:textColor="#333333"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="30px" />

        </RelativeLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_below="@+id/er"
        android:background="#B3B3B3" />
</RelativeLayout>