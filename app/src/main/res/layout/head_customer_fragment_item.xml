<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <View
        android:id="@+id/kongge"
        android:layout_width="match_parent"
        android:layout_height="20px"
        android:layout_below="@+id/rel"
        android:background="#F1F1F1"></View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/kongge"
        android:background="?android:attr/selectableItemBackground">


        <TextView
            android:id="@+id/shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:layout_marginTop="30px"
            android:drawableLeft="@mipmap/dp"
            android:drawablePadding="5px"
            android:text="餐饮"
            android:textSize="30px"
            android:textStyle="bold" />
        <Button

            android:id="@+id/dcai_bt"
            android:layout_width="140px"
            android:layout_height="65px"
            android:layout_below="@+id/hint_text"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:layout_marginTop="14px"
            android:background="@drawable/yellow_bg"
            android:gravity="center"
        android:layout_alignParentRight="true"
            android:text="代客户下单"
            android:textColor="@android:color/white"
            android:textSize="25px" />

        <RelativeLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/shop_name"
            android:background="@color/white"
        android:layout_marginTop="20px"
            android:paddingBottom="20px">

            <RelativeLayout
                android:id="@+id/rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px">
                <!-- 一个联系人 -->
                <LinearLayout
                    android:id="@+id/yige_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone"

                    >

                    <TextView
                        android:id="@+id/yige_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30px"
                        android:layout_weight="1"
                        android:drawableLeft="@mipmap/head_cus"
                        android:drawablePadding="9px"
                        android:text="dsadas"
                        android:textSize="30px" />

                    <TextView
                        android:id="@+id/yige_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="65px"
                        android:drawableLeft="@mipmap/head_phone"
                        android:drawablePadding="9px"
                        android:text="213123123"
                        android:textSize="30px" />
                </LinearLayout>
                <!-- 三个联系人 -->
                <LinearLayout

                    android:id="@+id/sange_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    >

                    <RelativeLayout
                        android:layout_width="198px"
                        android:layout_height="120px"
                        android:layout_marginLeft="40px"
                        android:background="@drawable/shape_address"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/iv_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10px"
                            android:src="@mipmap/shr" />

                        <TextView
                            android:id="@+id/name1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/iv_1"
                            android:layout_marginBottom="-4px"

                            android:layout_marginLeft="5px"
                            android:layout_toRightOf="@+id/iv_1"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="---"
                            android:textColor="#333333"
                            android:textSize="26px" />

                        <TextView
                            android:id="@+id/phone_et1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/name1"
                            android:layout_marginLeft="10px"
                            android:layout_marginTop="20px"
                            android:layout_weight="1"
                            android:text="----"
                            android:textColor="#333333"

                            android:textSize="26px" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl2"
                        android:layout_width="198px"
                        android:layout_height="120px"
                        android:layout_marginLeft="26px"
                        android:background="@drawable/shape_address"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/iv_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10px"
                            android:src="@mipmap/shr" />

                        <TextView
                            android:id="@+id/name2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_alignBottom="@+id/iv_2"
                            android:layout_marginBottom="-4px"

                            android:layout_marginLeft="5px"
                            android:layout_toRightOf="@+id/iv_2"

                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="---"
                            android:textColor="#333333"
                            android:textSize="26px" />

                        <TextView
                            android:id="@+id/phone_et2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/name2"
                            android:layout_marginLeft="10px"
                            android:layout_marginTop="20px"
                            android:layout_weight="1"
                            android:text="---"
                            android:textColor="#333333"

                            android:textSize="26px" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl3"
                        android:layout_width="198px"
                        android:layout_height="120px"
                        android:layout_marginLeft="26px"
                        android:background="@drawable/shape_address"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/iv_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10px"
                            android:src="@mipmap/shr" />

                        <TextView
                            android:id="@+id/name3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_alignBottom="@+id/iv_3"

                            android:layout_marginBottom="-4px"
                            android:layout_marginLeft="5px"
                            android:layout_toRightOf="@+id/iv_3"

                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="---"
                            android:textColor="#333333"
                            android:textSize="26px" />

                        <TextView
                            android:id="@+id/phone_et3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/name3"
                            android:layout_marginLeft="10px"
                            android:layout_marginTop="20px"
                            android:layout_weight="1"
                            android:text="---"
                            android:textColor="#333333"
                            android:textSize="26px" />
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl"
                android:layout_marginLeft="30px"
                android:layout_marginTop="25px"


                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:src="@mipmap/head_address" />

                <TextView
                    android:id="@+id/address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:layout_marginRight="50px"

                    android:layout_weight="1"
                    android:text="-----"
                    android:textColor="#666666"
                    android:textSize="30px" />

            </LinearLayout>


        </RelativeLayout>
        <View

            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_below="@+id/ll"
            android:background="#F1F1F1"></View>

    </RelativeLayout>


</RelativeLayout>