    <RelativeLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="104px"
        android:layout_alignParentTop="true"
        android:background="@color/white"
        >

        <ImageView
            android:id="@+id/back_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="?android:attr/selectableItemBackground"
            android:layout_marginLeft="26px"
            android:src="@mipmap/back_black" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:text="采购分析"
            android:textColor="#666"
            android:textSize="32px" />
        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_alignParentBottom="true"
            android:background="#999999"
            ></View>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/eLayout"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_below="@+id/top_layout"
        android:background="@color/white">

        <TextView
            android:id="@+id/nian_tv"
            android:layout_width="358px"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="2016年"
            android:textColor="@color/light_black"
            android:textSize="35px" />
        <ImageView
            android:id="@+id/hengxian_tv33"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_centerVertical="true"
            android:layout_marginLeft="260px"
            android:src="@mipmap/bottom_button"

            />
        <TextView
            android:id="@+id/feni_tv"
            android:layout_width="2px"
            android:layout_height="70px"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/nian_tv"
            android:background="@color/grey1"
            android:gravity="center" />

        <TextView
            android:id="@+id/month_tv"
            android:layout_width="358px"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/feni_tv"
            android:gravity="center"
            android:text="8月"
            android:textColor="@color/light_black"
            android:textSize="35px" />

        <TextView
            android:id="@+id/hengxian_tv2"
            android:layout_width="150px"
            android:layout_height="4px"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="20px"
            android:layout_marginRight="104px"
            android:background="@color/yellow"
            android:gravity="center"
            android:textSize="35px" />

        <ImageView
            android:id="@+id/hengxian_tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="80px"
            android:src="@mipmap/bottom_button"

            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <lecho.lib.hellocharts.view.ColumnChartView
            android:paddingBottom="60px"
            android:id="@+id/chart"
            android:layout_marginTop="20px"
            android:layout_width="match_parent"
            android:layout_height="650px" >
        </lecho.lib.hellocharts.view.ColumnChartView>
