        <TextView
            android:id="@+id/henxian"
            android:layout_below="@+id/chart"
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginTop="10px"
            android:gravity="center"

            android:background="@color/gray"
            android:textSize="40px" />
        <LinearLayout
            android:id="@+id/ll1"
            android:layout_width="359px"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="23px"
            android:layout_below="@+id/henxian"
            android:gravity="center"

            >
            <TextView
                android:layout_below="@+id/chart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#999999"
                android:gravity="center"
                android:text="食材"
                android:textSize="30px" />
            <TextView
                android:id="@+id/first_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="20px"
                android:text="---"
                android:textColor="#2E2E2E"
                android:textStyle="bold"
                android:textSize="40px" />
        </LinearLayout>
        <LinearLayout
            android:layout_toRightOf="@+id/ll1"
            android:layout_alignTop="@+id/ll1"
            android:layout_width="359px"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:layout_below="@+id/henxian"
            android:gravity="center"

            >
            <TextView
                android:layout_below="@+id/chart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#999999"
                android:gravity="center"
                android:text="数量"

                android:textSize="30px" />
            <TextView
                android:id="@+id/first_tv_sl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="---"
                android:textColor="#2E2E2E"
                android:layout_marginTop="20px"
                android:textStyle="bold"
                android:textSize="35px" />
        </LinearLayout>
        <TextView
            android:id="@+id/hx2"
            android:layout_below="@+id/ll1"
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginTop="9px"
            android:gravity="center"

            android:background="@color/gray"
            android:textSize="40px" />


        <TextView
            android:layout_below="@+id/hx2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="采购费用"
            android:textSize="30px"
            android:textColor="#999999"
            android:layout_marginTop="40px"
            />
        <TextView
            android:id="@+id/first_tv_fy"
            android:layout_below="@+id/hx2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_marginTop="120px"
            android:text="---"
            android:textColor="#2E2E2E"
            android:textSize="35px"
            android:textStyle="bold"
            />
    </RelativeLayout>
</LinearLayout>
