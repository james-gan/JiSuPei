    <RelativeLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"

        android:background="@color/white"
        android:layout_height="104px">

        <ImageView
            android:layout_width="wrap_content"
            android:src="@mipmap/back_black"
            android:layout_centerVertical="true"
            android:background="?android:attr/selectableItemBackground"
            android:id="@+id/back_bt"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="35px"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:textColor="#666"
            android:text="意见反馈"
            android:id="@+id/textView"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_alignParentBottom="true"
            android:background="#999999"
            ></View>
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:layout_marginTop="20px"
        android:text="我们将珍视你的每一个反馈，你的意见和建议是对集速配最大的支持"
        android:textColor="#717171"
        android:textSize="28px" />

    <EditText
        android:id="@+id/contents_et"
        android:layout_width="match_parent"
        android:layout_height="180px"
        android:layout_marginTop="15px"
        android:background="@color/white"
        android:gravity="top"
        android:hint="请简要描述你的问题和意见"
        android:paddingLeft="10px"
        android:paddingTop="10px"
        android:textColorHint="#c6c6cc"
        android:textSize="26px"
         android:maxLength="150"

        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20px"
        android:layout_marginRight="50px"
        android:layout_marginTop="25px"
        android:gravity="bottom"
        android:text="图片说明"
        android:textSize="26px" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200px"
        android:layout_marginTop="25px"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/rl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerVertical="true"

            >
            <com.facebook.drawee.view.SimpleDraweeView
                android:layout_marginTop="19px"
                android:layout_marginBottom="15px"
                android:id="@+id/image1"
                android:layout_width="120px"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                fresco:placeholderImage="@mipmap/add_image_wuliu"
                fresco:placeholderImageScaleType="fitXY"
                fresco:progressBarImage="@mipmap/load"
                fresco:actualImageScaleType="fitXY"
                fresco:progressBarImageScaleType="fitXY"
                fresco:viewAspectRatio="1"
                fresco:roundedCornerRadius="4dp"
                android:layout_gravity="center_vertical"
                />
            <ImageView
                android:id="@+id/add_iv_del1"
                android:layout_width="32px"
                android:layout_height="32px"
                android:layout_marginLeft="-16px"

                android:src="@mipmap/close_red" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:layout_marginTop="19px"
                android:layout_marginBottom="15px"
                android:id="@+id/image2"
                android:layout_width="120px"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                fresco:placeholderImage="@mipmap/add_image_wuliu"
                fresco:placeholderImageScaleType="fitXY"
                fresco:progressBarImage="@mipmap/load"
                fresco:actualImageScaleType="fitXY"
                fresco:progressBarImageScaleType="fitXY"
                fresco:viewAspectRatio="1"
                fresco:roundedCornerRadius="4dp"
                android:layout_gravity="center_vertical"
                />

            <ImageView
                android:id="@+id/add_iv_del2"
                android:layout_width="32px"
                android:layout_height="32px"
                android:layout_marginLeft="-16px"

                android:src="@mipmap/close_red" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/image3"
                android:layout_marginTop="19px"
                android:layout_marginBottom="15px"
                android:layout_width="120px"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                fresco:placeholderImage="@mipmap/add_image_wuliu"
                fresco:placeholderImageScaleType="fitXY"
                fresco:progressBarImage="@mipmap/load"
                fresco:actualImageScaleType="fitXY"
                fresco:progressBarImageScaleType="fitXY"
                fresco:viewAspectRatio="1"
                fresco:roundedCornerRadius="4dp"
                android:layout_gravity="center_vertical"
                />

            <ImageView
                android:id="@+id/add_iv_del3"
                android:layout_width="32px"
                android:layout_height="32px"
                android:layout_marginLeft="-16px"

                android:src="@mipmap/close_red" />
        </LinearLayout>

        <ImageView
            android:id="@+id/image_add"
            android:layout_width="110px"
            android:layout_height="110px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20px"
            android:layout_toRightOf="@+id/rl"
            android:src="@mipmap/huizhidan" />


    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20px"
        android:layout_marginRight="50px"
        android:layout_marginTop="25px"
        android:gravity="bottom"
        android:text="联系方式"
        android:textSize="26px" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="74px"
        android:layout_marginTop="25px">

        <TextView
            android:id="@+id/phone_et"
            android:layout_width="140px"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:drawablePadding="20px"
            android:drawableRight="@mipmap/sanjiao"
            android:gravity="center"
            android:paddingLeft="20px"
            android:paddingRight="20px"
            android:textSize="26px"
            android:text="电话" />

        <TextView
            android:id="@+id/phone_et_fl"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/phone_et"
            android:gravity="center"
            android:paddingLeft="5px"
            android:text="—" />

        <EditText
            android:id="@+id/phone_et_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10px"
            android:layout_toRightOf="@+id/phone_et_fl"
            android:background="@color/white"
            android:hint="请输入号码"
            android:paddingLeft="5px"
            android:textColorHint="#c6c6cc"
            android:inputType="number"
            android:maxLength="15"
            android:textSize="26px" />

    </RelativeLayout>


    <Button
        android:id="@+id/save_btn"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_below="@+id/line_grey2"
        android:layout_marginLeft="50px"
        android:layout_marginRight="50px"
        android:layout_marginTop="95px"
        android:background="@drawable/yellow_bg"
        android:gravity="center"
        android:text="提交"
        android:textColor="@android:color/white"
        android:textSize="30px"

        />

</LinearLayout>
