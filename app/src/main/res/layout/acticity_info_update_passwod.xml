<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="104px"
        android:layout_alignParentTop="true"
        android:background="@color/white">

        <ImageView
            android:id="@+id/back_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="26px"
            android:background="?android:attr/selectableItemBackground"
            android:src="@mipmap/back_black" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:text="修改密码"
            android:textColor="#666"
            android:textSize="32px" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_alignParentBottom="true"
            android:background="#999999"></View>
    </RelativeLayout>


    <RelativeLayout

        android:id="@+id/jiu"
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:layout_below="@+id/top_layout"
        android:layout_marginTop="40px"
        android:background="@color/white"
      >

        <TextView

            android:layout_toLeftOf="@+id/pwd_old"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_weight="5"
            android:gravity="right"
            android:text="旧密码："
            android:textColor="#666666"
            android:textSize="29px"></TextView>

        <EditText
            android:id="@+id/pwd_old"
            android:layout_width="480px"
            android:layout_height="88px"
            android:layout_marginRight="50px"

            android:background="@color/transparent"
            android:hint="请输入旧密码"
            android:inputType="textPassword"
            android:maxLength="12"
            android:singleLine="true"
            android:textColorHint="#c6c6cc"
            android:textSize="29px"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>

    <View
        android:id="@+id/jiu_view"
        android:layout_width="wrap_content"
        android:layout_height="2px"
        android:layout_below="@+id/jiu"
        android:background="#dddddd"

        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"

            android:layout_toLeftOf="@+id/pwd_new1"

            android:gravity="right"
            android:text="新密码："
            android:textColor="#666666"
            android:textSize="29px"></TextView>

        <EditText
            android:id="@+id/pwd_new1"

            android:layout_width="480px"
            android:layout_height="88px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="50px"
            android:layout_weight="2"
            android:background="@color/transparent"
            android:hint="请输入新密码"
            android:inputType="textPassword"
            android:maxLength="12"
            android:singleLine="true"

            android:textColorHint="#c6c6cc"
            android:textSize="29px" />

        <TextView
            android:id="@+id/send_sms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/mail"
            android:drawablePadding="10px"
            android:maxLength="11"
            android:text="获取验证码"

            android:textColor="#ff671d"

            android:textSize="31px"
            android:visibility="gone" />
    </RelativeLayout>

    <View

        android:layout_width="wrap_content"
        android:layout_height="2px"

        android:background="#dddddd" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:background="@color/white"

        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"


            android:layout_toLeftOf="@+id/pwd_new2"
            android:gravity="right"
            android:text="确认新密码："
            android:textColor="#666666"
            android:textSize="29px"></TextView>


        <EditText
            android:id="@+id/pwd_new2"

            android:layout_width="480px"
            android:layout_height="88px"
            android:layout_alignParentRight="true"

            android:layout_centerVertical="true"
            android:layout_marginRight="50px"
            android:background="@color/transparent"
            android:hint="请再次输入新密码"
            android:inputType="textPassword"
            android:maxLength="12"
            android:singleLine="true"
            android:textColorHint="#c6c6cc"
            android:textSize="29px" />

    </RelativeLayout>

    <View

        android:layout_width="wrap_content"
        android:layout_height="2px"

        android:background="#dddddd" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginLeft="50px"
        android:layout_marginRight="50px"
        android:layout_marginTop="21px"
        android:layout_weight="1"
        android:gravity="bottom"
        android:textSize="29px" />


    <Button
        android:id="@+id/save_btn"
        android:layout_width="match_parent"
        android:layout_height="98px"
        android:layout_alignParentBottom="true"
        android:background="@color/blue_head"
        android:gravity="center"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="30px" />
</LinearLayout>
