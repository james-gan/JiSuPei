    <RelativeLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="104px"
        android:layout_alignParentTop="true"
        android:background="@color/white"
        >

        <ImageView
            android:id="@+id/back_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="?android:attr/selectableItemBackground"
            android:layout_marginLeft="26px"
            android:src="@mipmap/back_black" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:text="注册"
            android:textColor="#666"
            android:textSize="32px" />
        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_alignParentBottom="true"
            android:background="#999999"
            ></View>
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60px"
        android:layout_marginTop="30px"
        android:text="账户名称"
        android:textColor="#373737"
        android:textSize="32px" />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="80px"
    android:orientation="horizontal"
    >
    <EditText
        android:id="@+id/dengluming_et"
        android:layout_width="wrap_content"
        android:layout_height="80px"
        android:layout_marginLeft="60px"
        android:hint="请设置您的登录账户名"
        android:background="@color/transparent"
        android:textColorHint="#c6c6cc"
        android:textSize="28px"
        android:layout_marginTop="10px"
        android:maxLength="12"
        />
    <TextView
        android:id="@+id/dengluming_et_msg"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="20px"
        android:gravity="center"
        android:text=""
        android:textColor="@color/yellow111"
        android:textSize="23px" />
</LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#C8C8C8"
        android:layout_marginLeft="60px"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60px"
        android:layout_marginTop="30px"
        android:text="设置密码"
        android:textColor="#373737"
        android:textSize="32px" />

    <EditText
         android:id="@+id/psd_et1"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:layout_marginLeft="60px"
        android:hint="请设置登录密码"
        android:background="@color/transparent"
        android:textColorHint="#c6c6cc"
        android:textSize="28px"
        android:layout_marginTop="10px"
        android:inputType="textPassword"
        />
    <View
        android:layout_marginTop="2px"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#C8C8C8"
        android:layout_marginLeft="60px"
        />

    <EditText
        android:id="@+id/psd_et2"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:layout_marginLeft="60px"
        android:hint="请再次输入您的登录密码"
        android:background="@color/transparent"
        android:textColorHint="#c6c6cc"
        android:textSize="28px"
        android:layout_marginTop="10px"
        android:inputType="textPassword"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#C8C8C8"
        android:layout_marginLeft="60px"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60px"
        android:layout_marginTop="30px"
        android:text="联系人"
        android:textColor="#373737"
        android:textSize="32px" />

    <EditText
         android:id="@+id/contactName"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:layout_marginLeft="60px"
        android:hint="请填写您的真实姓名"
        android:background="@color/transparent"
        android:textColorHint="#c6c6cc"
        android:textSize="28px"
        android:layout_marginTop="10px"
        />
    <View
        android:layout_width="wrap_content"
        android:layout_height="1px"
        android:background="#C8C8C8"
        android:layout_marginLeft="60px"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60px"
        android:layout_marginTop="30px"
        android:text="手机号码"
        android:textColor="#373737"
        android:textSize="32px" />

    <EditText
        android:id="@+id/contactPhone"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:layout_marginLeft="60px"
        android:hint="请填写您的手机号码"
        android:background="@color/transparent"
        android:textColorHint="#c6c6cc"
        android:textSize="28px"
        android:layout_marginTop="10px"
        android:inputType="number"
        android:maxLength="11"
        />
    <View
        android:layout_width="wrap_content"
        android:layout_height="1px"
        android:background="#C8C8C8"
        android:layout_marginLeft="60px"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60px"
        android:layout_marginTop="20px"
        android:text="验证码"
        android:textColor="#373737"
        android:textSize="32px" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10px"
        >
        <EditText
            android:id="@+id/secCode_tv"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:layout_marginLeft="60px"
            android:hint="请填写您收到的验证码"
            android:background="@color/transparent"
            android:textColorHint="#c6c6cc"
            android:inputType="number"
            android:maxLength="11"
            android:textSize="28px"

            />
        <TextView
            android:id="@+id/send_secCode_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取验证码"
            android:textColor="@color/yellow111"
            android:drawableLeft="@mipmap/mail"

            android:drawablePadding="10px"
            android:layout_marginRight="50px"
            android:textSize="31px"

            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="3px"
        android:background="#C8C8C8"
        android:layout_marginLeft="60px"
        />

    <Button
        android:id="@+id/save_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line_grey2"
        android:layout_marginLeft="50px"
        android:layout_marginRight="50px"
        android:layout_marginTop="55px"
        android:background="@drawable/yellow_bg"
        android:gravity="center"
        android:padding="24px"
        android:text="提交"
        android:textColor="@android:color/white"
        android:textSize="40px"

        />


</LinearLayout>
