<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"

    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:padding="5dp"
        android:background="@color/yellow1"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:src="@mipmap/ic_keyboard_arrow_left_white_36dp"
            android:layout_centerVertical="true"
            android:id="@+id/back_bt"
            android:background="?android:attr/selectableItemBackground"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40px"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:textColor="@android:color/white"
            android:text="修改联系电话"
            android:id="@+id/textView"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70px"
        android:orientation="horizontal"
        android:layout_marginTop="100px"
        android:gravity="center_vertical"
        android:inputType="number"
        >
        <!--<EditText-->
            <!--android:id="@+id/rephone_et"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="match_parent"-->
            <!--android:hint="请输入手机号"-->
            <!--android:layout_weight="1"-->
            <!--android:layout_marginLeft="50px"-->
            <!--android:layout_marginRight="50px"-->
            <!--android:gravity="bottom"-->
            <!--android:textSize="35px"-->
            <!--android:background="@color/transparent"-->
            <!--/>-->
        <EditText
            android:id="@+id/rephone_et"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="50px"
            android:layout_marginRight="50px"
            android:hint="请输入手机号"
            android:textColorHint="#c6c6cc"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:textSize="35px"
            android:inputType="number"
            />
      <TextView
          android:id="@+id/send_sms"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="获取验证码"
          android:textColor="#ff671d"
          android:drawableLeft="@mipmap/mail"

          android:drawablePadding="10px"
          android:layout_marginRight="50px"
          android:textSize="31px"

          />
    </LinearLayout>

    <View

        android:layout_width="wrap_content"
        android:layout_height="2px"
        android:background="#C8C8C8"
        android:layout_marginLeft="50px"
        android:layout_marginRight="50px"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70px"
        android:orientation="horizontal"
        android:layout_marginTop="10px"
        android:gravity="center_vertical"
        >
        <!--<EditText-->
            <!--android:id="@+id/yzm_et"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="match_parent"-->
             <!--android:hint="请填写短信验证码"-->
            <!--android:layout_weight="1"-->
            <!--android:layout_marginLeft="50px"-->
            <!--android:layout_marginRight="75px"-->
            <!--android:gravity="bottom"-->
            <!--android:textSize="35px"-->
            <!--android:background="@color/transparent"-->
            <!--android:inputType="number"-->
            <!--/>-->
        <EditText
            android:id="@+id/yzm_et"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="50px"
            android:layout_marginRight="75px"
            android:hint="请填写短信验证码"
            android:textColorHint="#c6c6cc"
            android:background="@color/transparent"
            android:textSize="35px"
            android:inputType="number"

            />
        <TextView
            android:id="@+id/error_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="验证码错误"
            android:textColor="#ff671d"
            android:drawableLeft="@mipmap/password_close"
            android:drawablePadding="10px"
            android:layout_marginRight="50px"
            android:textSize="29px"

            />
    </LinearLayout>
    <View

        android:layout_width="wrap_content"
        android:layout_height="2px"
        android:background="#C8C8C8"
        android:layout_marginLeft="50px"
        android:layout_marginRight="50px"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1、关联到门店送货的收货人联系方式"
        android:layout_marginTop="21px"
        android:layout_marginLeft="50px"
        android:layout_marginRight="50px"
        android:gravity="bottom"
        android:textSize="29px"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2、总部联系门店的直接联系方式"
        android:layout_marginTop="21px"
        android:layout_marginLeft="50px"
        android:layout_marginRight="50px"
        android:gravity="bottom"
        android:textSize="29px"
        />
    <TextView
        android:id="@+id/hint_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="28px"
        android:layout_marginLeft="40px"
        android:layout_marginTop="30px"
        android:visibility="invisible"
        android:drawablePadding="5dp"
        android:textColor="@color/yellow111"
        android:drawableLeft="@mipmap/password_close"
        android:text="登陆账号不存在"

        />
    <Button
        android:id="@+id/save_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/line_grey2"
        android:layout_marginTop="85px"
        android:layout_marginRight="50px"
        android:layout_marginLeft="50px"
        android:textSize="40px"
        android:textColor="@android:color/white"
        android:padding="24px"
        android:background="@drawable/yellow_bg"
        android:text="保存"

        />

</LinearLayout>
