<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:background="@color/white">

        <ImageView
            android:id="@+id/back_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="26px"
            android:background="?android:attr/selectableItemBackground"
            android:src="@mipmap/back_black" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:text="新建抵用券"
            android:textColor="#666"
            android:textSize="16sp" />


        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_alignParentBottom="true"
            android:background="#999999"></View>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">



        <TextView
            android:id="@+id/khmc_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="抵用券名称:"
            android:textColor="#373737"
            android:layout_marginLeft="40px"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/khmc_et"
            android:layout_width="match_parent"
            android:layout_height="85px"
            android:layout_marginLeft="20px"
       android:gravity="center_vertical"
            android:background="@color/transparent"
            android:textColor="#373737"

            android:textSize="13sp"
            android:text="客户专属抵用券"

            />
    </LinearLayout>

    <View
        android:id="@+id/yeqd_text"
        android:layout_width="match_parent"
        android:layout_height="2px"

        android:layout_marginTop="2px"
        android:background="#C8C8C8" />



    <RelativeLayout
        android:id="@+id/mc_rl"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">



        <TextView
            android:id="@+id/khmc_te"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="客户名称:"
            android:gravity="center"
            android:textColor="#373737"
            android:layout_marginLeft="40px"
            android:layout_centerVertical="true"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/khmc_ett"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20px"
            android:gravity="center_vertical"
            android:background="@color/transparent"
            android:textColor="#373737"

            android:textSize="13sp"
            android:text="1232"
            android:layout_toLeftOf="@+id/go_iv111"
            android:layout_marginRight="10dp"

            />

        <ImageView
            android:id="@+id/go_iv111"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/back_button1" />
    </RelativeLayout>

    <View

        android:layout_width="match_parent"
        android:layout_height="2px"

        android:layout_marginTop="2px"
        android:background="#C8C8C8" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">



        <TextView
            android:id="@+id/dyj_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="抵用券公司:"
            android:textColor="#373737"
            android:layout_marginLeft="40px"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/dyj_et"
            android:layout_width="match_parent"
            android:layout_height="85px"
            android:layout_marginLeft="20px"
            android:gravity="center_vertical"
            android:background="@color/transparent"
            android:textColor="#373737"

            android:textSize="13sp"
             android:hint="请选择"

            />
    </LinearLayout>

    <View

        android:layout_width="match_parent"
        android:layout_height="2px"

        android:layout_marginTop="2px"
        android:background="#C8C8C8" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">



        <TextView
            android:id="@+id/dyjme_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="抵用券面额:"
            android:textColor="#373737"
            android:layout_marginLeft="40px"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/dyjme_et"
            android:layout_width="0dp"
            android:layout_height="85px"
            android:layout_weight="1"
            android:layout_marginLeft="10px"
            android:gravity="center_vertical"
            android:background="@color/transparent"
            android:textColor="#373737"

            android:textSize="13sp"
            android:hint="请填写抵用券面额"

            />
        <TextView
            android:id="@+id/tis_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="最多不超过8000元"
            android:textColor="#f35432"
            android:layout_marginLeft="10px"
android:layout_marginRight="5dp"
            android:textSize="13sp" />
    </LinearLayout>

    <View

        android:layout_width="match_parent"
        android:layout_height="2px"

        android:layout_marginTop="2px"
        android:background="#C8C8C8" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">



        <TextView
            android:id="@+id/dybili_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="抵扣比率:"
            android:textColor="#373737"
            android:layout_marginLeft="40px"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/dybili"
            android:layout_width="match_parent"
            android:layout_height="85px"
            android:layout_marginLeft="20px"
            android:gravity="center_vertical"
            android:background="@color/transparent"
            android:textColor="#373737"

            android:textSize="13sp"
            android:hint="3%"

            />
    </LinearLayout>

    <View

        android:layout_width="match_parent"
        android:layout_height="2px"

        android:layout_marginTop="2px"
        android:background="#C8C8C8" />

    <RelativeLayout
        android:id="@+id/kaishiRL"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">



        <TextView
            android:id="@+id/kaishij_te"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开始时间:"
            android:textColor="#373737"
            android:layout_marginLeft="40px"
            android:layout_centerVertical="true"
            android:textSize="13sp"/>



        <ImageView
            android:id="@+id/go_iv222"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/back_button1" />
    </RelativeLayout>

    <View

        android:layout_width="match_parent"
        android:layout_height="2px"

        android:layout_marginTop="2px"
        android:background="#C8C8C8" />

    <RelativeLayout
        android:id="@+id/jieshuRL"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/jieshiu_te"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="结束时间:"
            android:textColor="#373737"
            android:layout_marginLeft="40px"
            android:layout_centerVertical="true"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/go_iv12321"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/back_button1" />
    </RelativeLayout>

    <View
        android:id="@+id/khmc_ett_v"
        android:layout_width="match_parent"
        android:layout_height="2px"

        android:layout_marginTop="2px"
        android:background="#C8C8C8" />

</LinearLayout>
