<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/right_dish_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffffff"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/aaa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:text="物流方式" />

        <LinearLayout
            android:id="@+id/a1"
            android:layout_toRightOf="@+id/aaa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            >
            <ImageView
                android:id="@+id/a1_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/list_icon_choose1"
                />
            <TextView
                android:id="@+id/a1_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"

                android:text="集配号物流" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/a2"
            android:layout_toRightOf="@+id/a1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            >
            <ImageView
                android:id="@+id/a2_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/list_icon_default1"
                />
            <TextView
                android:id="@+id/a2_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"

                android:text="第三方物流" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/a3"
            android:layout_toRightOf="@+id/a2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            >
            <ImageView
                android:id="@+id/a3_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/list_icon_default1"
                />
            <TextView
                android:id="@+id/a3_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"

                android:text="自提" />

        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d3d3d3"
        ></View>
    <RelativeLayout
        android:id="@+id/cl_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffffff"

        android:paddingLeft="10dp"
>

        <TextView
            android:id="@+id/aaa1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="发货车辆" />


        <TextView
            android:id="@+id/fhcl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/aaa1"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:hint="请选择"
 />
    </RelativeLayout>
    <View
        android:id="@+id/fa_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d3d3d3"
        ></View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffffff"

        android:paddingLeft="10dp"

        >

        <TextView
             android:id="@+id/ck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="发货仓库" />


        <TextView
            android:id="@+id/fhck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             android:layout_toRightOf="@+id/ck"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:hint="请选择"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d3d3d3"
        ></View>


</LinearLayout>