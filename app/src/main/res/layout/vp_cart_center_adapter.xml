<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/right_dish_item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_margin="10dp"

>
        <!--android:background="@mipmap/card_active"-->
        <RelativeLayout
            android:id="@+id/img_rl"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/white"
android:layout_toLeftOf="@+id/right"
            android:layout_alignParentLeft="true"

            >

            <ImageView
                android:id="@+id/img_cart"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:src="@mipmap/error"
                android:layout_centerVertical="true"
                android:layout_marginLeft="3dp"

                />

            <TextView
                android:id="@+id/cart_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"

                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/img_cart"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="新人礼包"
                android:textColor="#333333"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/money_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignLeft="@+id/cart_name"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="6dp"
                android:text="200"
                android:layout_marginBottom="6dp"
                android:textColor="@color/orange_head"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/man_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                 android:gravity="center"
                    android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_alignTop="@+id/money_cart"

                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/money_cart"
                android:text="200"
                android:textColor="@color/blue_head"
                android:textSize="14sp"
                android:background="@drawable/shape_cart_blue"

                />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/right"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@color/white"
    >


            <ImageView
                android:id="@+id/has_get"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentRight="true"
                android:src="@mipmap/bid_label_get"
                android:layout_marginTop="-23dp"
                android:layout_marginRight="-12dp"
                />
            <cn.bingoogolapple.progressbar.BGAProgressBar
                android:id="@+id/mBGAProgressBar"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="190dp"
                android:layout_height="190dp"
                android:padding="5dp"
                android:progress="40"
                android:layout_alignParentRight="true"
                android:text="新人礼包"
                app:bga_pb_isCapRounded="false"
                app:bga_pb_isHiddenText="false"
                app:bga_pb_mode="circle"
                app:bga_pb_reachedColor="@color/blue_head"
                app:bga_pb_reachedHeight="4dp"
                app:bga_pb_textColor="@color/blue_head"
                app:bga_pb_textMargin="8dp"
                app:bga_pb_textSize="12sp"
                app:bga_pb_unReachedColor="#f3f3f3"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                app:bga_pb_unReachedHeight="2dp"/>

            <TextView
                android:id="@+id/lingqu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="1dp"
                android:background="@drawable/shape_order_blue_exception"
                android:paddingBottom="2dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="3dp"
                android:text="立即领取"
                android:textColor="@color/white"
                android:layout_marginRight="5dp"
                android:textSize="13sp" />
        </RelativeLayout>


        <View
            android:id="@+id/view"
            android:layout_width="90dp"
            android:layerType="software"
            android:layout_height="match_parent"
            android:layout_marginLeft="-40dp"
            android:layout_marginRight="-50dp"

            android:background="@drawable/bg_dotted_line"
            android:layout_toLeftOf="@+id/right"
            >

        </View>
    </RelativeLayout>

</LinearLayout>