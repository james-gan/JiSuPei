        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="2px"-->
        <!--android:background="@color/light_black"-->
        <!--android:layout_marginLeft="50px"-->
        <!--android:layout_marginRight="50px"-->
        <!--/>-->

    <EditText
        android:id="@+id/rename_et"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:layout_marginTop="100px"
        android:layout_marginLeft="50px"
        android:layout_marginRight="50px"
        android:hint="请输入收货人姓名"
        android:textColorHint="#c6c6cc"
        android:background="@color/transparent"
        android:textSize="28px"

        />
    <View

        android:layout_width="wrap_content"
        android:layout_height="2px"
        android:background="#C8C8C8"
    android:layout_marginLeft="50px"
    android:layout_marginRight="50px"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1、关联到门店送货的收货人姓名"
        android:layout_marginTop="21px"
        android:layout_marginLeft="50px"
        android:layout_marginRight="50px"
        android:gravity="bottom"
        android:textSize="29px"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2、总部联系门店的直接联系人"
        android:layout_marginTop="21px"
        android:layout_marginLeft="50px"
        android:layout_marginRight="50px"
        android:gravity="bottom"
        android:textSize="29px"
        />
    <TextView
        android:id="@+id/hint_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="28px"
        android:layout_marginLeft="40px"
        android:layout_marginTop="30px"
        android:visibility="invisible"
        android:drawablePadding="5dp"
        android:textColor="@color/yellow111"
        android:drawableLeft="@mipmap/password_close"
        android:text="登陆账号不存在"

        />
    <Button
        android:id="@+id/save_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/line_grey2"
        android:layout_marginTop="155px"
        android:layout_marginRight="50px"
        android:layout_marginLeft="50px"
        android:textSize="40px"
        android:textColor="@android:color/white"
        android:padding="24px"
        android:background="@drawable/yellow_bg"
        android:text="保存"

        />

</LinearLayout>
