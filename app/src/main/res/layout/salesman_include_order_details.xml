<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f1"
    android:orientation="vertical">

    <TextView
        android:id="@+id/shop_name"
        android:layout_width="match_parent"
        android:layout_height="80px"

        android:textColor="#333333"
        android:textSize="30px"
        android:text="门店名称"
        android:gravity="center_vertical"
        android:paddingLeft="30px"
        android:drawableLeft="@mipmap/dp"
        android:drawablePadding="5px"
        />

    <RelativeLayout
       android:id="@+id/rl_shenghe"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_marginBottom="20px"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/shenghe"
            android:layout_width="wrap_content"
            android:layout_height="60px"
            android:layout_marginLeft="30px"
            android:text="审核信息"
            android:textSize="30px"
            android:textColor="#333333"
            android:gravity="center_vertical"

            />
        <View
            android:id="@+id/view_sh"
            android:layout_below="@+id/shenghe"
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="#DDDDDD"></View>
 <!--一个审核人-->
      <RelativeLayout
            android:id="@+id/rl_sh1"
          android:paddingRight="5px"
            android:layout_width="match_parent"
            android:layout_below="@+id/view_sh"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/sh_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:text="审核人:"
            android:textSize="28px"
            android:textColor="#666666"
            android:layout_marginTop="10px"
            android:maxWidth="450px"

            />
        <TextView
            android:id="@+id/sh_time"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/sh_name"

            android:layout_toLeftOf="@+id/sh_status1"

            android:text="审核时间:2015"
            android:textSize="26px"
            android:textColor="#666666"


            />
        <TextView
            android:id="@+id/sh_beizhu"
            android:layout_below="@+id/sh_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="20px"
            android:text="审核备注："
            android:textSize="28px"
            android:textColor="#666666"
            android:layout_marginRight="40px"
            android:layout_marginTop="20px"

            />
          <ImageView
              android:id="@+id/sh_status1"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:src="@mipmap/tongguo"
              android:layout_alignParentRight="true"
              />
          <View
              android:layout_width="match_parent"
              android:layout_height="2px"
              android:layout_below="@+id/sh_beizhu"
              android:layout_marginTop="20px"
              android:background="#DDDDDD"></View>
        </RelativeLayout>

        <!--二个审核人-->
     <RelativeLayout
            android:id="@+id/rl_sh2"
         android:paddingRight="5px"
            android:layout_width="match_parent"
            android:layout_below="@+id/rl_sh1"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/sh_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:text="审核人:"
                android:textSize="28px"
                android:textColor="#666666"
                android:layout_marginTop="10px"
                android:maxWidth="450px"
                />
            <TextView
                android:id="@+id/sh_time2"
                android:layout_toLeftOf="@+id/sh_status2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/sh_name2"

                android:layout_marginLeft="20px"
                android:text="审核时间:2015"
                android:textSize="26px"
                android:textColor="#666666"


                />
            <TextView
                android:id="@+id/sh_beizhu2"
                android:layout_below="@+id/sh_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginLeft="20px"
                android:text="审核备注："
                android:textSize="28px"
                android:textColor="#666666"
                android:layout_marginRight="40px"
                android:layout_marginTop="20px"

                />
         <ImageView
             android:id="@+id/sh_status2"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"

             android:src="@mipmap/tongguo"
             android:layout_alignParentRight="true"
             />
            <View

                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_below="@+id/sh_beizhu2"
                android:layout_marginTop="20px"
                android:background="#DDDDDD"></View>
        </RelativeLayout>

    </RelativeLayout>
<!--  审核信息结束-->

    <RelativeLayout

        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"

        android:paddingBottom="20px">

        <RelativeLayout
            android:id="@+id/rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px">
            <!-- 一个联系人 -->
            <LinearLayout
                android:id="@+id/yige_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone"


                >

                <TextView
                    android:id="@+id/yige_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40px"
                    android:layout_weight="1"
                    android:text="dsadas"
                    android:textSize="30px" />

                <TextView
                    android:id="@+id/yige_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="65px"
                    android:text="213123123"
                    android:textSize="30px" />
            </LinearLayout>
            <!-- 三个联系人 -->
            <LinearLayout

                android:id="@+id/sange_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                >

                <RelativeLayout
                    android:layout_width="185px"
                    android:layout_height="120px"
                    android:layout_marginLeft="40px"
                    android:background="@drawable/shape_address"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/iv_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10px"
                        android:src="@mipmap/shr" />

                    <TextView
                        android:id="@+id/name1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/iv_1"
                        android:layout_marginBottom="-4px"

                        android:layout_marginLeft="5px"
                        android:layout_toRightOf="@+id/iv_1"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="---"
                        android:textColor="#333333"
                        android:textSize="26px" />

                    <TextView
                        android:id="@+id/phone_et1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/name1"
                        android:layout_marginLeft="10px"
                        android:layout_marginTop="20px"
                        android:layout_weight="1"
                        android:text="----"
                        android:textColor="#333333"

                        android:textSize="26px" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl2"
                    android:layout_width="185px"
                    android:layout_height="120px"
                    android:layout_marginLeft="26px"
                    android:background="@drawable/shape_address"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/iv_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10px"
                        android:src="@mipmap/shr" />

                    <TextView
                        android:id="@+id/name2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_alignBottom="@+id/iv_2"
                        android:layout_marginBottom="-4px"

                        android:layout_marginLeft="5px"
                        android:layout_toRightOf="@+id/iv_2"

                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="---"
                        android:textColor="#333333"
                        android:textSize="26px" />

                    <TextView
                        android:id="@+id/phone_et2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/name2"
                        android:layout_marginLeft="10px"
                        android:layout_marginTop="20px"
                        android:layout_weight="1"
                        android:text="---"
                        android:textColor="#333333"

                        android:textSize="26px" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl3"
                    android:layout_width="185px"
                    android:layout_height="120px"
                    android:layout_marginLeft="26px"
                    android:background="@drawable/shape_address"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/iv_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10px"
                        android:src="@mipmap/shr" />

                    <TextView
                        android:id="@+id/name3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_alignBottom="@+id/iv_3"

                        android:layout_marginBottom="-4px"
                        android:layout_marginLeft="5px"
                        android:layout_toRightOf="@+id/iv_3"

                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="---"
                        android:textColor="#333333"
                        android:textSize="26px" />

                    <TextView
                        android:id="@+id/phone_et3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/name3"
                        android:layout_marginLeft="10px"
                        android:layout_marginTop="20px"
                        android:layout_weight="1"
                        android:text="---"
                        android:textColor="#333333"
                        android:textSize="26px" />
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl"
            android:layout_marginLeft="30px"
            android:layout_marginTop="25px"


            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@mipmap/address" />

            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                android:layout_marginRight="50px"
                android:layout_marginTop="6px"
                android:layout_weight="1"
                android:text="-----"
                android:textColor="#666666"
                android:textSize="30px" />

        </LinearLayout>


    </RelativeLayout>

    <View
        android:id="@+id/view_0"
        android:layout_width="match_parent"
        android:layout_height="6px"
        android:layout_below="@+id/ll"

        android:background="@mipmap/hx" />

    <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="20px"-->
        <!--android:layout_below="@+id/view_0"-->
        <!--android:background="#F2F2F2"></View>-->

    <!--留言-->

    <LinearLayout
        android:id="@+id/liuyan_el"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content"
        android:paddingBottom="20px"
        android:paddingTop="20px"
        >

        <TextView
            android:id="@+id/liuyan_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20px"
            android:layout_marginLeft="30px"
            android:text="留言湿倒萨爱上啊阿斯达斯"
            android:textColor="#666666"
            android:drawableLeft="@mipmap/message1"
            android:drawablePadding="10px"
            android:textSize="28px" />


    </LinearLayout>

    <View
        android:id="@+id/view_11"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/view_0"
        android:background="#F1F1F1"></View>

    <!--  价钱-->


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20px"
        android:background="@color/white"
        android:layout_height="100px">

        <TextView
            android:id="@+id/order_id_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_marginTop="10px"
            android:layout_marginLeft="10px"
            android:text="订单编号：89898998"
            android:textSize="30px"
            android:drawableLeft="@mipmap/order_left1"
            android:drawablePadding="5px"
            android:textColor="#666666"
            />
        <TextView
            android:id="@+id/xdsj_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50px"

            android:text="下单时间"
            android:textSize="26px"
            android:layout_below="@+id/order_id_tv"

            android:textColor="#999999"
            />
        <TextView
            android:id="@+id/order_status"
            android:layout_alignTop="@+id/order_id_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"

            android:layout_marginRight="20px"
            android:text="配送中"
            android:textColor="#333333"
            android:textSize="30px" />
        <ImageView
            android:id="@+id/wzf_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/wzf"
            android:layout_toLeftOf="@+id/order_status"
            android:layout_marginTop="-20px"
            />
        <ImageView
            android:id="@+id/yzf_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/yzf"
            android:layout_toLeftOf="@+id/order_status"
            android:layout_marginTop="-20px"
            />
    </RelativeLayout>
</LinearLayout>